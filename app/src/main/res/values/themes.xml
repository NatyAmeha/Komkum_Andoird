<resources>

    <style name="AppthemeDark.Fullscreen" parent="AppthemeDark">
        <item name="android:actionBarStyle">@style/Widget.AppthemeDark.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.ZomaTunes.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    <style name="AppthemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppthemeDark.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppthemeDark.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>