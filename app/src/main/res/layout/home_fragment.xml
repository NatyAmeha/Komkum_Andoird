<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <import type="com.example.ethiomusic.data.model.Song"/>
        <import type="com.example.ethiomusic.data.model.Playlist"/>
        <import type="com.example.ethiomusic.data.model.RecyclerViewHelper"/>
        <variable
            name="homeViewmodel"
            type="com.example.ethiomusic.ui.home.HomeViewModel" />
        <variable
            name="showingHistory"
            type="Boolean" />

        <variable
            name="artistInfo"
            type="com.example.ethiomusic.data.model.RecyclerViewHelper&lt;com.example.ethiomusic.data.model.Artist&lt;String,String>>" />

