                    android:visibility="@{(showingHistory &amp;&amp; homeViewmodel.homeData.data.recentActivity.size >0)? View.VISIBLE : View.GONE}"
                    app:layout_constraintStart_toStartOf="@+id/textView27"
                    app:layout_constraintTop_toBottomOf="@+id/new_album_viewpager" />

