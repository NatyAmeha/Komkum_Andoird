                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="@+id/textView21"
                    app:layout_constraintTop_toBottomOf="@+id/popular_ortodox_albums_recyclerview" />

                <TextView
                    android:id="@+id/more_islamic_albums_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="see more"
                    android:textColor="#FFFFFF"
                    android:visibility="@{homeViewmodel.homeData.data.popularIslamicAlbum.size() > 0 ? View.VISIBLE : View.GONE}"
                    app:layout_constraintEnd_toEndOf="@+id/more_ortodox_album_textview"
                    app:layout_constraintTop_toTopOf="@+id/textView25" />

                <androidx.recyclerview.widget.RecyclerView
