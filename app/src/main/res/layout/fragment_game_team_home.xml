<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/team_overview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.store.team.GameTeamHomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.store.team.GameTeamHomeFragment" >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_margin_start"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/default_margin_start"
            android:visibility="visible"
            app:cardBackgroundColor="@color/transparent"
            app:cardCornerRadius="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient3">

                <TextView
                    android:id="@+id/total_prize_textview"
                    style="@style/Header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="24dp"
                    android:text="ETB 50000"
                    android:textAlignment="viewStart"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView222" />

                <TextView
                    android:id="@+id/textView199"
                    style="@style/Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="1"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView222"
                    app:layout_constraintTop_toBottomOf="@+id/total_prize_textview" />

                <TextView
                    android:id="@+id/textView224"
                    style="@style/Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="2"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/textView199"
                    app:layout_constraintTop_toBottomOf="@+id/textView199" />

                <TextView
                    android:id="@+id/textView202"
                    style="@style/Subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView224"
                    app:layout_constraintTop_toBottomOf="@+id/textView224" />

                <TextView
                    android:id="@+id/second_prize_textview"
                    style="@style/Subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="2nd prize"
                    android:textAlignment="viewStart"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/textView224"
                    app:layout_constraintEnd_toEndOf="@+id/first_prize_textview"
                    app:layout_constraintStart_toStartOf="@+id/first_prize_textview"
                    app:layout_constraintTop_toTopOf="@+id/textView224" />

                <TextView
                    android:id="@+id/first_prize_textview"
                    style="@style/Subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="1st prize"
                    android:textAlignment="viewStart"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/textView199"
                    app:layout_constraintEnd_toEndOf="@+id/textView222"
                    app:layout_constraintStart_toEndOf="@+id/textView242"
                    app:layout_constraintTop_toTopOf="@+id/textView199" />

                <TextView
                    android:id="@+id/third_prize_textview"
                    style="@style/Subtitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="3rd prize"
                    android:textAlignment="viewStart"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/textView202"
                    app:layout_constraintEnd_toEndOf="@+id/second_prize_textview"
                    app:layout_constraintStart_toStartOf="@+id/second_prize_textview"
                    app:layout_constraintTop_toTopOf="@+id/textView202" />

                <TextView
                    android:id="@+id/textView222"
                    style="@style/Body2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="32dp"
                    android:text="@string/total_prize"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/total_prize_textview"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/group2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="50dp"
                    app:constraint_referenced_ids="total_prize_textview,textView224,first_prize_textview,textView202,third_prize_textview,textView222,second_prize_textview,textView199" />

                <ImageView
                    android:id="@+id/game_imageview"
                    android:layout_width="130dp"
                    android:layout_height="0dp"
                    android:rotation="0"
                    android:rotationX="0"
                    android:rotationY="-27"
                    android:src="@drawable/gameimage"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView242"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/st"
                    android:textAppearance="@style/Caption"
                    app:layout_constraintBottom_toTopOf="@+id/textView199"
                    app:layout_constraintStart_toEndOf="@+id/textView199"
                    app:layout_constraintTop_toTopOf="@+id/textView199" />

                <TextView
                    android:id="@+id/textView243"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nd"
                    android:textAppearance="@style/Caption"
                    app:layout_constraintBottom_toTopOf="@+id/textView224"
                    app:layout_constraintStart_toEndOf="@+id/textView224"
                    app:layout_constraintTop_toTopOf="@+id/textView224" />

                <TextView
                    android:id="@+id/textView244"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rd"
                    android:textAppearance="@style/Caption"
                    app:layout_constraintBottom_toTopOf="@+id/textView202"
                    app:layout_constraintStart_toEndOf="@+id/textView202"
                    app:layout_constraintTop_toTopOf="@+id/textView202" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView211"
            style="@style/Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/sponsor"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="@+id/ad_owner_name_textview"
            app:layout_constraintStart_toStartOf="@+id/cardView4"
            app:layout_constraintTop_toTopOf="@+id/ad_owner_name_textview" />

        <TextView
            android:id="@+id/ad_owner_name_textview"
            style="@style/Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="Company name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView211"
            app:layout_constraintTop_toBottomOf="@+id/cardView4" />

        <ImageView
            android:id="@+id/ad_owner_imageview"
            android:layout_width="0dp"
            android:layout_height="@dimen/game_advertiser_image_size"
            android:layout_marginStart="@dimen/default_margin_start"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/default_margin_start"
            android:scaleType="centerCrop"
            android:src="@drawable/sp_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ad_owner_name_textview" />

        <TextView
            android:id="@+id/textView213"
            style="@style/Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/required"
            app:layout_constraintStart_toStartOf="@+id/ad_owner_imageview"
            app:layout_constraintTop_toBottomOf="@+id/ad_owner_imageview" />

        <TextView
            android:id="@+id/required_player_textview"
            style="@style/Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView213"
            app:layout_constraintTop_toTopOf="@+id/textView213" />

        <TextView
            android:id="@+id/textView215"
            style="@style/Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/joined_players"
            app:layout_constraintStart_toStartOf="@+id/textView213"
            app:layout_constraintTop_toBottomOf="@+id/textView213" />

        <TextView
            android:id="@+id/current_player_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Body1"
            app:layout_constraintEnd_toEndOf="@+id/required_player_textview"
            app:layout_constraintStart_toStartOf="@+id/required_player_textview"
            app:layout_constraintTop_toTopOf="@+id/textView215" />

        <TextView
            android:id="@+id/team_expire_text_view"
            style="@style/Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/remaining_day"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="@+id/textView215"
            app:layout_constraintTop_toBottomOf="@+id/textView201" />

        <TextView
            android:id="@+id/remaining_day_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Body1"
            android:textColor="#D32F2F"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/current_player_textview"
            app:layout_constraintStart_toStartOf="@+id/current_player_textview"
            app:layout_constraintTop_toTopOf="@+id/team_expire_text_view" />

        <TextView
            android:id="@+id/textView201"
            style="@style/Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/player_status"
            app:layout_constraintStart_toStartOf="@+id/textView215"
            app:layout_constraintTop_toBottomOf="@+id/textView215" />

        <TextView
            android:id="@+id/status_textview"
            style="@style/Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/current_player_textview"
            app:layout_constraintStart_toStartOf="@+id/current_player_textview"
            app:layout_constraintTop_toTopOf="@+id/textView201" />

        <TextView
            android:id="@+id/discount_textview"
            style="@style/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/team_expire_text_view" />


        <include
            android:id="@+id/sponsored_product"
            layout="@layout/productlist_list_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/discount_description_textview" />

        <TextView
            android:id="@+id/discount_description_textview"
            style="@style/Body3"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/discount_textview"
            app:layout_constraintTop_toBottomOf="@+id/discount_textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
