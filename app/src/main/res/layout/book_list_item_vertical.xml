<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_v_imageview"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginStart="@dimen/margin_start"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/music_placeholder" />

        <TextView
            android:id="@+id/book_title_v_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="Book title"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/book_v_imageview"
            app:layout_constraintTop_toTopOf="@+id/book_v_imageview" />

        <TextView
            android:id="@+id/book_author_v_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Author Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintEnd_toEndOf="@+id/book_title_v_textview"
            app:layout_constraintStart_toStartOf="@+id/book_title_v_textview"
            app:layout_constraintTop_toBottomOf="@+id/book_title_v_textview" />

        <RatingBar
            android:id="@+id/book_rating_v_ratingview"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:numStars="5"
            app:layout_constraintStart_toStartOf="@+id/book_author_v_textview"
            app:layout_constraintTop_toBottomOf="@+id/book_author_v_textview" />

        <TextView
            android:id="@+id/booK_review_v_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=" (43 review)"
            app:layout_constraintBottom_toBottomOf="@+id/book_rating_v_ratingview"
            app:layout_constraintStart_toEndOf="@+id/book_rating_v_ratingview"
            app:layout_constraintTop_toTopOf="@+id/book_rating_v_ratingview" />

        <TextView
            android:id="@+id/copy_sold_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="@+id/book_rating_v_ratingview"
            app:layout_constraintTop_toBottomOf="@+id/book_rating_v_ratingview" />

        <ImageView
            android:id="@+id/vertical_book_format_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/book_v_imageview"
            app:layout_constraintEnd_toStartOf="@+id/copy_sold_textview"
            app:srcCompat="@drawable/ic_baseline_menu_book_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>