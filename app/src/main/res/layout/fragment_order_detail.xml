<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.komkum.komkum.data.model.RecyclerViewHelper"/>
        <import type="com.komkum.komkum.data.model.OrderedItem"/>
        <import type="com.komkum.komkum.data.model.Product"/>


        <variable
            name="orderedItemInfo"
            type="RecyclerViewHelper&lt;OrderedItem&lt;Product>>" />
        <variable
            name="orderedItemList"
            type="java.util.List&lt;OrderedItem&lt;Product>>" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:background="@color/light_secondaryColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:background="@color/transparent"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent" />
        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/order_details_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            tools:context=".ui.store.order.OrderDetailFragment">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView173"
                    style="@style/Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:background="@color/light_secondaryLightColor"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="@string/products"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView12" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/order_product_recyclerview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="56dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView173"
                    app:orderedItemInfo="@{orderedItemInfo}"
                    app:orderedItemList="@{orderedItemList}"
                    tools:listitem="@layout/productlist_list_item" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/order_status_cardview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/main_order_status_textview"
                            style="@style/Subtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:drawablePadding="8dp"
                            android:text="Delivered"
                            android:textAlignment="center"
                            app:drawableStartCompat="@drawable/ic_baseline_check_circle_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/order_status_cardview">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView144"
                            style="@style/Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/order_code"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/textView157" />

                        <TextView
                            android:id="@+id/delivery_code_textview2"
                            style="@style/Subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:text="123456"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/order_status_textview"
                            app:layout_constraintTop_toTopOf="@+id/textView144" />

                        <TextView
                            android:id="@+id/order_code_desc_textview2"
                            style="@style/Body3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:text="@string/order_code_description"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/delivery_code_textview2"
                            app:layout_constraintStart_toStartOf="@+id/textView144"
                            app:layout_constraintTop_toBottomOf="@+id/textView144"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/textView189"
                            style="@style/Title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp"
                            android:text="@string/delivery_date"
                            app:layout_constraintEnd_toStartOf="@+id/guideline3"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/order_delivery_date_textview"
                            style="@style/Subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="16dp"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/guideline3"
                            app:layout_constraintTop_toTopOf="@+id/textView189" />

                        <TextView
                            android:id="@+id/textView157"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp"
                            android:text="@string/order_status"
                            android:textAppearance="@style/Body3"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/textView189"
                            app:layout_constraintStart_toStartOf="@+id/textView189"
                            app:layout_constraintTop_toBottomOf="@+id/textView189"
                            app:layout_constraintVertical_bias="0.0" />

                        <TextView
                            android:id="@+id/order_status_textview"
                            style="@style/Body3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="viewEnd"
                            app:layout_constraintEnd_toEndOf="@+id/order_delivery_date_textview"
                            app:layout_constraintStart_toStartOf="@+id/order_delivery_date_textview"
                            app:layout_constraintTop_toTopOf="@+id/textView157" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guideline3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_percent="0.4" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="1dp"
                    app:layout_constraintEnd_toEndOf="@+id/cardView3"
                    app:layout_constraintStart_toStartOf="@+id/cardView3"
                    app:layout_constraintTop_toBottomOf="@+id/cardView3">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView166"
                            style="@style/Title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="@string/total_price"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/order_price_textview"
                            style="@style/Subtitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="32dp"
                            android:layout_marginEnd="16dp"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/textView166"
                            app:layout_constraintTop_toTopOf="@+id/textView166" />

                        <ImageView
                            android:id="@+id/imageView28"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@+id/textView166"
                            app:layout_constraintTop_toBottomOf="@+id/textView41"
                            app:srcCompat="@drawable/ic_baseline_payment_24" />

                        <TextView
                            android:id="@+id/payment_type_textview"
                            style="@style/Body2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Wallet payment"
                            android:textColor="@color/primaryColor"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView28"
                            app:layout_constraintEnd_toEndOf="@+id/order_price_textview"
                            app:layout_constraintStart_toEndOf="@+id/imageView28"
                            app:layout_constraintTop_toTopOf="@+id/imageView28" />

                        <ImageView
                            android:id="@+id/imageView29"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintStart_toStartOf="@+id/imageView28"
                            app:layout_constraintTop_toBottomOf="@+id/imageView28"
                            app:srcCompat="@drawable/ic_baseline_shopping_cart_gray_24" />

                        <TextView
                            android:id="@+id/item_count_textview"
                            style="@style/Body2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="2dp"
                            android:text="Team purchase"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView29"
                            app:layout_constraintEnd_toEndOf="@+id/payment_type_textview"
                            app:layout_constraintStart_toStartOf="@+id/payment_type_textview"
                            app:layout_constraintTop_toTopOf="@+id/imageView29" />

                        <ImageView
                            android:id="@+id/imageView30"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/imageView29"
                            app:layout_constraintTop_toBottomOf="@+id/imageView29"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/ic_baseline_calendar_today_24" />

                        <TextView
                            android:id="@+id/order_date_textview"
                            style="@style/Body2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Ordered on Aug 12 2021"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView30"
                            app:layout_constraintEnd_toEndOf="@+id/item_count_textview"
                            app:layout_constraintStart_toStartOf="@+id/item_count_textview"
                            app:layout_constraintTop_toTopOf="@+id/imageView30" />

                        <ImageView
                            android:id="@+id/imageView27"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/imageView30"
                            app:layout_constraintStart_toStartOf="@+id/imageView30"
                            app:layout_constraintTop_toBottomOf="@+id/imageView30"
                            app:srcCompat="@drawable/ic_baseline_money_off_24" />

                        <TextView
                            android:id="@+id/textView203"
                            style="@style/Body2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/discount_code_applied"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView27"
                            app:layout_constraintStart_toStartOf="@+id/order_date_textview"
                            app:layout_constraintTop_toTopOf="@+id/imageView27" />

                        <androidx.constraintlayout.widget.Group
                            android:id="@+id/discount_indicator_group"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:constraint_referenced_ids="imageView27,textView203" />

                        <TextView
                            android:id="@+id/textView41"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/vat_included"
                            android:textAppearance="@style/Body2"
                            app:layout_constraintEnd_toEndOf="@+id/order_price_textview"
                            app:layout_constraintStart_toStartOf="@+id/textView166"
                            app:layout_constraintTop_toBottomOf="@+id/textView166" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/order_details_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/circle_4" />


        <TextView
            android:id="@+id/error_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="@string/error_message"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/primaryTextColor" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>