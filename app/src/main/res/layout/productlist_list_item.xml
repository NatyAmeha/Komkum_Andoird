<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_secondaryLightColor">

        <ImageView
            android:id="@+id/p_imageview"
            android:layout_width="@dimen/vertical_product_list_item_size"
            android:layout_height="@dimen/vertical_product_list_item_size"
            android:layout_marginStart="@dimen/default_margin_start"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            android:background="@color/exo_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/p_title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Logn product name  with description. laskjd Logn product name  with description"
            android:textAppearance="@style/Body1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/p_imageview"
            app:layout_constraintTop_toTopOf="@+id/p_imageview" />

        <TextView
            android:id="@+id/p_subtitle_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ETB 23500"
            android:textAppearance="@style/Title"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/p_title_textview"
            app:layout_constraintStart_toStartOf="@+id/p_title_textview"
            app:layout_constraintTop_toBottomOf="@+id/p_title_textview" />

        <TextView
            android:id="@+id/p_subtitle1_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textAppearance="@style/Caption"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/p_subtitle_textview"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/p_subtitle_textview"
            app:layout_constraintTop_toBottomOf="@+id/p_subtitle_textview" />

        <TextView
            android:id="@+id/return_eligable_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_corner_drawable"
            android:padding="5dp"
            android:text="@string/return_eligible"
            android:textAppearance="@style/Caption2"
            android:textColor="@color/light_primaryColor"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@+id/p_subtitle_textview"
            app:layout_constraintTop_toBottomOf="@+id/p_subtitle1_textview" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>