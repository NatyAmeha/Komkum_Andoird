<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="listInfo"
            type="com.zomatunes.zomatunes.data.model.RecyclerViewHelper&lt;com.zomatunes.zomatunes.data.model.Song&lt;String,String>>" />

        <variable
            name="viewmodel"
            type="com.zomatunes.zomatunes.ui.album.AlbumViewModel" />

        <variable
            name="isFromCache"
            type="Boolean" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/album_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryDarkColor"
        tools:context=".ui.album.AlbumFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/album_song_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="56dp"
            app:info="@{listInfo}"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            app:list="@{viewmodel.album.songs}"
            tools:listitem="@layout/song_list_item" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/trnasparentColor" >


            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/c_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
                app:statusBarScrim="@color/primaryDarkColor"
                app:titleEnabled="false">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:visibility="@{viewmodel.album != null ? View.VISIBLE : View.INVISIBLE}"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax">

                    <com.zomatunes.zomatunes.ui.customview.CustomPlaylistImageview
                        android:id="@+id/custom_playlist_imageview"
                        android:layout_width="@dimen/cover_image_size"
                        android:layout_height="@dimen/cover_image_size"
                        android:layout_marginTop="56dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <Button
                        android:id="@+id/album_shuffle_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Shuffle Songs"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/album_artist_name_textview" />

                    <TextView
                        android:id="@+id/album_artist_name_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/album_name_textview" />

                    <TextView
                        android:id="@+id/album_name_textview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="24dp"
                        android:text="@{viewmodel.album.name}"
                        android:textAlignment="center"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="#FFFFFF"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="1.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/custom_playlist_imageview" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/album_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:title="@{viewmodel.album.name}" />
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <ProgressBar
            android:id="@+id/album_loading_progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:elevation="40dp"
            android:visibility="@{viewmodel.album != null ? View.GONE : View.VISIBLE}"
            android:layout_gravity="center" />

        <include android:id="@+id/selection_menu"
            layout="@layout/multi_selection_menu"
            size="@{viewmodel.album.songs.size}"
            selectedItemSize="@{listInfo.stateManager.multiselectedItems.size}"
            favoriteFlag="@{isFromCache}"
            addFlag="@{isFromCache}"
            downloadFlag="@{isFromCache}"
            removeFlag="@{isFromCache}"
            android:visibility="gone"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>